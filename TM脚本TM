local ScreenGui = Instance.new("ScreenGui")
local TextLabel = Instance.new("TextLabel")

-- 设置ScreenGui属性
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.AlwaysOnTop

-- 设置TextLabel属性
TextLabel.Name = "IntrusionNotice"
TextLabel.Text = "此服务器已被TM脚本作者入侵"
TextLabel.Font = Enum.Font.GothamBold
TextLabel.TextSize = 40 -- 增大字体大小
TextLabel.TextColor3 = Color3.fromRGB(255, 0, 0) -- 红色
TextLabel.BackgroundTransparency = 1
TextLabel.Size = UDim2.new(0, 400, 0, 100)
TextLabel.Position = UDim2.new(0.5, -200, 0.5, -50) -- 居中显示
TextLabel.AnchorPoint = Vector2.new(0.5, 0.5) -- 居中对齐

-- 将TextLabel添加到ScreenGui
ScreenGui.AddChild(TextLabel)

-- 定义显示和隐藏消息的函数
local function ShowMessage()
    TextLabel.Visible = true
    wait(5) -- 显示5秒
    TextLabel.Visible = false
end

-- 每隔20秒显示一次消息
while true do
    ShowMessage()
    wait(20) -- 等待20秒
end